<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewRoomRecyclerView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/textViewTypeRoomRecyclerView"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewLocationRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/imageViewRoomRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/imageViewRoomRecyclerView"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textViewLocationRecyclerView"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextAboutTheRoomRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/textViewTypeRoomRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypeRoomRecyclerView" />

    <TextView
        android:id="@+id/editTextAboutTheRoomRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRoomRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewLocationRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocationRecyclerView" />


</androidx.constraintlayout.widget.ConstraintLayout>