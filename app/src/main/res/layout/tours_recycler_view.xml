<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewTourRecyclerView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:civ_border_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/textViewTourRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="where is it?..."
        app:layout_constraintBottom_toTopOf="@+id/textViewHowFarTourRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/imageViewTourRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/imageViewTourRecyclerView"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textViewHowFarTourRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how far to go ?"
        app:layout_constraintBottom_toTopOf="@+id/editTextAboutTheTourRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/textViewTourRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourRecyclerView" />

    <TextView
        android:id="@+id/editTextAboutTheTourRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:hint="Tell Us a bit more about the place, what to do...."
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTourRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewHowFarTourRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/textViewHowFarTourRecyclerView"
        android:layout_marginRight="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>